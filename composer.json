{
    "name": "hexlet/code",
    "description": "An application for finding differences in JSON and YAML files",
    "type":"library",
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Parsers.php",
            "src/Formatters.php",
            "src/ReadingFile.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php"
        ]
    },
    "authors": [
        {
            "name": "Konstantin",
            "email": "konst.kazan@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.2",
        "docopt/docopt": "^1.0",
        "symfony/string": "^6.2",
        "symfony/yaml": "^7.0",
        "lstrojny/functional-php": "^1.17"
      },
      "require-dev": {
        "phpunit/phpunit": "^9.5.26",
        "squizlabs/php_codesniffer": "^3.7.1",
        "phpstan/phpstan": "^1.12"
      },
    "license": "MIT",
    "bin": [
        "bin/gendiff"
      ]
}
